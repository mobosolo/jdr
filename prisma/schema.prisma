generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(USER)
  news      News[]
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}

model News {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String   @db.Text
  publishedAt DateTime @default(now())
  author      User     @relation(fields: [authorId], references: [id])
  authorId    String
  images      Image[]
}

model Show {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  location    String
  startDate   DateTime
  endDate     DateTime
  images      Image[]
  medias      Media[]
}

model Media {
  id     String    @id @default(cuid())
  title  String
  type   MediaType @default(VIDEO)
  url    String
  show   Show?     @relation(fields: [showId], references: [id])
  showId String?
  images Image[]
}

enum MediaType {
  VIDEO
  AUDIO
  PODCAST
  DOCUMENT
}

model Image {
  id        String   @id @default(cuid())
  url       String
  alt       String?
  news      News?    @relation(fields: [newsId], references: [id])
  newsId    String?
  show      Show?    @relation(fields: [showId], references: [id])
  showId    String?
  media     Media?   @relation(fields: [mediaId], references: [id])
  mediaId   String?
  createdAt DateTime @default(now())
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String   @db.Text
  createdAt DateTime @default(now())
}